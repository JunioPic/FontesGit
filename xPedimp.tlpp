    oPrinter:Line( nLin, 015, nLin, 825)
    nLin += 10
    oPrinter:Say(nLin, 030, "PROFORMA INVOICE:",           oFont10T)
    oPrinter:Say(nLin, 120, +ALLTRIM(QPO->W2_NR_PRO),      oFont10F)
