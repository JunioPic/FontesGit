    TcQuery cQuery New Alias "QPO"

    TCSetField( 'QPO', "W2_PO_DT", "D" )

    dEmissao := Dtoc(QPO->W2_PO_DT)

     oPrinter:StartPage()
     oPrinter:Box (030, 015, 595, 825)
     xCadEmp(dEmissao)
    

   If   QPO->W2_NR_ALTE != 0
