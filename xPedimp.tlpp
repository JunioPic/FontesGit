    nLin += 10
    oPrinter:Say(nLin, 030, "BUYER:",                     oFont10T)
    oPrinter:Say(nLin, 065, +ALLTRIM(QPO->Y1_NOME),       oFont10F)
    oPrinter:Say(nLin, 300, "E-MAIL:",                    oFont10T)
    oPrinter:Say(nLin, 340, +ALLTRIM(QPO->Y1_EMAIL),      oFont10F)
